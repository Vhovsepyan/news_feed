<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.example.vahe.newsfeed.model.Article" />

        <variable
            name="holder"
            type="com.example.vahe.newsfeed.view.viewholders.ArticleVerticalViewHolder" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/avatar"
            src="@{item.thumbnail}"
            android:layout_width="@dimen/list_item_image_with"
            android:layout_height="@dimen/list_item_image_height"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/padding"
            tools:src="@drawable/ic_menu_slideshow" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding"
            android:layout_marginEnd="@dimen/padding"
            android:layout_toEndOf="@id/avatar"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{item.webTitle}"
            android:textColor="@color/color_black"
            android:textSize="@dimen/middle_text_size"
            tools:text="title" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_toEndOf="@id/avatar"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@{item.sectionName}"
                android:textColor="@color/color_grey"
                android:textSize="@dimen/small_text_size"
                android:textStyle="italic"
                tools:text="section" />


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginStart="5dp"
                android:text="@{item.dateForShow}"
                android:textColor="@color/color_grey"
                android:textSize="@dimen/small_text_size"
                android:textStyle="italic"
                tools:text="section" />
        </LinearLayout>
    </RelativeLayout>
</layout>
